@model List<DiscInventory.Models.Borrower>
@{
    ViewData["Title"] = "Borrower Page";
}

    <h1>Borrowers</h1>
    <a asp-controller="Borrower" asp-action="Add">Add New Borrower</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr><th>Borrower ID</th><th>First Name</th><th>Last Name</th><th>Phone</th><th>Email</th></tr>
        </thead>
        <tbody>
            @foreach (var borrower in Model)
            {
            <tr>
                <td>@borrower.BorrowerId</td>
                <td>@borrower.FName</td>
                <td>@borrower.LName</td>
                <td>@borrower.Phone</td>
                <td>@borrower.Email</td>
                <td>
                    <a asp-controller="Borrower" asp-action="Edit" asp-route-id="@borrower.BorrowerId">Edit</a>
                    <a asp-controller="Borrower" asp-action="Delete" asp-route-id="@borrower.BorrowerId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>