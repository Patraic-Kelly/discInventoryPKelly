@model Artist
@{
    string title = ViewBag.Action + " Artist";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ArtistName">Name</label>
        <input asp-for="ArtistName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ArtistLastName">Last name (If applicable)</label>
        <input asp-for="ArtistLastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ArtistTypeId">Artist Type</label>
        <select asp-for="ArtistTypeId" class="form-control">
            <option value="">Group or solo artist?</option>
            @foreach (ArtistType t in ViewBag.ArtistTypes)
            {
                <option value="@t.ArtistTypeId">@t.ArtistTypeDesc</option>
            }
        </select>
    </div>
    <input type="hidden" asp-for="ArtistId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>

    <a asp-controller="Artist" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>